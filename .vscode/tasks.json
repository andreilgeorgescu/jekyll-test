{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "jekyll build",
      "type": "shell",
      "command": "jekyll build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "jekyll serve",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload",
      "group": "none",
      "isBackground": true
    }
  ]
}
